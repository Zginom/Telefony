<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.daniel.telefony.MainActivity"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/samsung" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"
            android:text="Nazwa : Samsung Galaxy J5\nSystem : Android v.5.1\nRozdzielczość : 720 x 1280 pix\nWielkość : 5 cali\nProcesor : quad-core, Qualcomm MSM8916 Snapdragon 410, 1.2 GHz, Adreno 306\nPamięć : 8 GB (4.3 GB dla użytkownika)\nRAM : 1.5 GB\nKarta pamięci : microSD do 128 GB\nAparat głowny : 13 Mpix\nAparat przedni : 5 Mpix\nZasilanie : Li-lon 2600 mAh"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:onClick="powrot"
            />

    </LinearLayout>
</ScrollView>
